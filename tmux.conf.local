########################
# CUSTOMIZATIONS
########################

# This allows powerline
tmux_conf_theme_left_separator_main='\uE0B0'
tmux_conf_theme_left_separator_sub='\uE0B1'
tmux_conf_theme_right_separator_main='\uE0B2'
tmux_conf_theme_right_separator_sub='\uE0B3'

# This fixes color issues and allows truecolor (not needed with truecolor configuration option above)
set -g default-terminal "screen-256color"
set-option -ga terminal-overrides ",xterm-256color:Tc" # This allows True Color to work

# Enable mouse control (clickable windows, panes, resizable panes)
set -g mouse on

# split panes using | and -
bind | split-window -h
bind '\' split-window -h
bind -n M-'\' split-window -h
bind - split-window -v
bind -n M-'-' split-window -v
# unbind '"'
# unbind %

# Add Zoom key shortcut
bind -n M-z resize-pane -Z

# Add n key to create new window in addition to c
bind n new-window -c '#{pane_current_path}'
bind -n M-n new-window -c '#{pane_current_path}'
# bM-n ind n new-window -c '#{pane_current_path}'

# reload config file (change file location to your the tmux.conf you want to use)
bind r source-file ~/.tmux.conf

# switch panes using Alt-arrow without prefix
# bind -n C-h select-pane -L
# bind -n C-l select-pane -R
# bind -n C-k select-pane -U
# bind -n C-j select-pane -D
bind -n M-h select-pane -L
bind -n M-l select-pane -R
bind -n M-k select-pane -U
bind -n M-j select-pane -D
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# switch windows alt+number
bind -n M-1 select-window -t 1
bind -n M-2 select-window -t 2
bind -n M-3 select-window -t 3
bind -n M-4 select-window -t 4
bind -n M-5 select-window -t 5
bind -n M-6 select-window -t 6
bind -n M-7 select-window -t 7
bind -n M-8 select-window -t 8
bind -n M-9 select-window -t 9

# don't rename windows automatically
# set-option -g allow-rename off

set -g focus-events on # For FocusGained event for vim-gitgutter

